{{#extend "layout"}}
{{#content "main"}}

<section class="image-intro image-intro--no-height">
  <div class="site-container">
    {{>breadcrumbs}}
  </div>
</section>

<section class="contacts-section">
  <div class="site-container">
    <div class="contacts-section__body">
      <div class="contacts-section__left">
        <span class="contacts-section__title text-h2">
          Контакты
        </span>

        <a href="#" class="page-footer__phone-link contacts-section__phone-link phone-link phone-link--reverse">
          <span>8 918 044 89 22</span>
          <i>Заказать звонок</i>
        </a>

        <ul class="contacts-section__info-list">
          <li class="contacts-section__info-item contacts-section__info-item--full">
            <span class="contacts-section__key">Адрес в городе Казань:</span>
            <span class="contacts-section__value">
              ул. Мухамедьярова 31А, 3 этаж, оф. 301-305
            </span>
          </li>
          <li class="contacts-section__info-item">
            <span class="contacts-section__key">E-mail:</span>
            <span class="contacts-section__value">
              kirstroy@gmail.com
            </span>
          </li>
          <li class="contacts-section__info-item">
            <span class="contacts-section__key">Режим работы:</span>
            <span class="contacts-section__value">
              Пн-Пт: 09:00-18:00
            </span>
          </li>
        </ul>

        <div class="contacts-section__footer">
          <div class="contacts-section__logo">
            <span></span>
          </div>
          <a href="#" download target="_blank" class="contacts-section__expand expand-button" data-text="Реквизиты"></a>
        </div>
      </div>

      <div class="contacts-section__right">
        <form action="#" class="contacts-section__form" data-need-validation>
          <span class="contacts-section__form-title">
            Обратная связь:
          </span>

          <div class="feedback-form__form form-slide">
            <div class="form-slide__inputs-block form-slide__inputs-block--feedback">
              <div class="form-slide__inputs form-slide__inputs--feedback">
                <div class="form-slide__col">
                  <div class="form-slide__input-wrapper">
                    <div class="input-box input-box--ligth">
                      <input type="text" name="feedback-user-name" id="feedback-user-name" class="input-box__input"
                        placeholder="Ваше имя" required data-parsley-required="" data-parsley-reqtext=""
                        autocomplete="off">
                    </div>
                  </div>
                </div>
                <div class="form-slide__col">
                  <div class="form-slide__input-wrapper">
                    <div class="input-box input-box--ligth">
                      <input type="text" name="feedback-user-phone" id="feedback-user-phone"
                        class="input-box__input js-phone-input" placeholder="+7 (___)-___-__-__" required
                        data-parsley-required="" data-parsley-phone="" autocomplete="off">
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-slide__inputs">
                <div class="form-slide__col">
                  <div class="form-slide__input-wrapper">
                    <div class="input-box input-box--ligth">
                      <textarea name="feedback-user-comment" id="feedback-user-comment"
                        class="input-box__input input-box__input--textarea" placeholder="Описание"></textarea>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-slide__buttons">
              <label for="upload-user-file" class="main-button main-button--upload main-button--white main-button--second js-file-upload">
                <input class="visually-hidden" type="file" name="upload-user-file" id="upload-user-file">
                <span>Прикрепить файл</span>
                <svg aria-hidden="true" class="icon icon-upload">
                  <use xlink:href="#upload-file"></use>
                </svg>
              </label>

              <button type="submit" class="main-button main-button--orange">
                <span>Оставить заявку</span>
                <svg aria-hidden="true" class="icon">
                  <use xlink:href="#plus"></use>
                </svg>
              </button>
            </div>

            <div class="form-slide__agreement">
              <span>Нажимая кнопку «Оставить заявку», вы соглашаетесь с&nbsp;</span>
              <a href="#">
                политикой конфиденциальности
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

{{/content}}
{{/extend}}