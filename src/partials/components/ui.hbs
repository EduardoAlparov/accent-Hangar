<div class="input-box input-box--search">
	<input type="text" name="location-search" id="location-search-id" class="input-box__input" placeholder="Введите название города" required>
	<button type="submit" class="input-box__submit">
		<svg aria-hidden="true" class="icon icon-search">
			<use xlink:href="#search"></use>
		</svg>
	</button>
</div>

<a href="#" class="main-button main-button--orange">
	<span>Калькулятор ангаров</span>
	<svg aria-hidden="true" class="icon">
			<use xlink:href="#plus"></use>
	</svg>
</a>

<div class="select">
	<div class="select__current" tabindex="1">
			<div class="select__value">
					<input class="select__input" type="radio" id="temp-id-1" value="temp-value-1" name="temp-1" checked />
					<p class="select__input-text">
							Не выбрано
					</p>
			</div>
			<div class="select__value">
					<input class="select__input" type="radio" id="temp-id-2" value="temp-value-2" name="temp-1" />
					<p class="select__input-text">
							Холодный
					</p>
			</div>
			<div class="select__value">
					<input class="select__input" type="radio" id="temp-id-3" value="temp-value-3" name="temp-1" />
					<p class="select__input-text">
							Теплый
					</p>
			</div>
			<span class="select__icon">
					<svg aria-hidden="true" class="icon icon-search">
							<use xlink:href="#select-arrow"></use>
					</svg>
			</span>
	</div>
	<div class="select__list-wrapper">
			<ul class="select__list">
					<li>
							<label class="select__option" for="temp-id-1" aria-hidden="aria-hidden">
									Не выбрано
							</label>
					</li>
					<li>
							<label class="select__option" for="temp-id-2" aria-hidden="aria-hidden">
									Холодный
							</label>
					</li>
					<li>
							<label class="select__option" for="temp-id-3" aria-hidden="aria-hidden">
									Теплый
							</label>
					</li>
			</ul>
	</div>
</div>
