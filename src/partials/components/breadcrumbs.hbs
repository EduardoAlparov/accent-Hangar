{{#if breadcrumbsList}}
  <div class="breadcrumbs {{#if breadcrumbsClass}} breadcrumbs--dark {{/if}}">
    <ul class="breadcrumbs__list">
      {{#each breadcrumbsList}}
        <li class="breadcrumbs__item">
          <a href="#" class="breadcrumbs__link">
            {{ this }}
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}